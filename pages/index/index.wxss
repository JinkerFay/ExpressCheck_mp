/* *pages/index/index.wxss* */
page{
  height: 100%
}
/* default css 设置默认样式 */
.container{
  width: 750rpx;
  height: 100%;
  background: #f9f9f9;
}
text.title{
  margin-top: 200rpx; 
  color: #368;
  font-size: 30px;
  font-weight: bold;
}

.search{
  width: 80%;
  height: 90rpx;
  font-size: 16px;  
}
.search text{
   width:25% 
}
.search-ipt{
  width: 100%;
  border-radius: 10px;
  box-shadow: 0 0 1px #368;
  padding: 0 20rpx;
}
.search-tap{
  width: 80%;
  color: #fff;
  background-color: #368;
}

scroll-view{
  display: flex;
  width: 100%;
  height: 600rpx;
  background: #f5f5f5;
  border-top: 4px solid #368;
  /* align-items: flex-start; */
}
scroll-view text{
  width: 100%; 
  display: block;
}

.items{
  padding: 20rpx;
  font-weight: bold;
  border-bottom: 2px solid #368;
}
.items text{
  font-size: 16px;
  color: #368;
  line-height: 60rpx;
}
.items text:nth-child(2){
  line-height: 50rpx;
  color: #888;
  font-size: 14px;
  text-shadow: 0 0 #368;
}

.flag{
  font-size: 18px;
  color: #368;
  border-bottom: none;
} 
